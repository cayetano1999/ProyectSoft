@model ProjectSoft.ViewModels.CategoriaViewModel
@{
    ViewData["Title"] = "Categoria";
}


<div class=" col-sm-12 portada portadacontainer ">
    <br />
    <h2 class="text-center"><i class="fa fa-sort"></i> Categoria de Proyectos</h2>
    <p class="text-center text-info">Administra la categoria de los proyectos.</p>

</div>
@Html.Partial("_AlertPartial");  
<br />
<div class="col-sm-12" style="background-color:#FAFAFA; border-radius:20px; ">
    <br />
    <div class="form-row well">

        <table class="espaciotitulo table-responsive-lg">

            <tr>
                <td>
                   
                   <button type="button" class="btn btn-primary 
                           
                           
                           
                           tabla" data-toggle="modal" data-target="#exampleModalCenter">
                       <i class="fa fa-plus"></i> Agregar Categoria
                   </button>
                </td>

                <td>

                    <a  class="btn btn-secondary espaciotabla" asp-action="Index" asp-controller="Proyectos" >
                        <i class="fa fa-mail-reply"></i> Volver a Proyectos
                    </a>

                </td>

        </table>




    </div>

    <br />
</div>

<hr />

@Html.Partial("_ListadeCategoria", Model)


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-plus"></i> Agregar Nueva Categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Categoria" asp-controller="Proyectos" method="post">

                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="categoria" class="text-dark"><strong> Nombre de Categoria</strong></label>
                            <input asp-for="categoriaobj.Nombre" type="text" class="form-control border-info" maxlength="70" id="categoria">

                        </div>



                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"> <i class="fa fa-close"></i> Cancelar</button>
                        <button type="submit" class="btn btn-primary"> <i class="fa fa-save"></i> Agregar</button>
                    </div>

                </form>
            </div>
            
        </div>
    </div>
</div>


@Html.Partial("_Footer")