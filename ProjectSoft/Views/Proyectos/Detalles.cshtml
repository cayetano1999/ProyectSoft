@model ProjectSoft.ViewModels.ProyectoViewModel
@using ProjectSoft.Models.UserAccount
@{
    ViewData["Title"] = "CrearProyecto";
}

<div class=" col-sm-12 portada portadacontainer">
    <br />
    <h2 class="text-center"><i class="fa fa-info"></i> Detalles del Proyecto</h2>
    <p class="text-center text-info">Observa información detallada del proyecto.</p>
</div>
<br />




<center>



    <br />

    <form asp-action="CrearProyecto" class="disabled" asp-controller="Proyectos" method="post" enctype="multipart/form-data">



        <div class="col-sm-10 espaciotitulo divproyectodetalles" id="divinfo">


            <div>
                <br />
                <img src="~/FotosProyectos/@Model.ProyectoImg.LogoProyecto" style="width:20%; border-radius:100px;" class="embed-responsive" />

                <h2 class="text-info text-center">@Model.ProyectoInfo.Nombre</h2>
                <p class="text-dark text-center">@Model.ProyectoInfo.Descripcion</p>
                <hr />
                <br /><br />
                @Html.Partial("_AlertPartial")


                <div class="form-row">

                    <div class="form-group col-md-4">
                        <label for="inputEmail4" class="text-dark"> <strong> Nombre del Proyecto</strong> </label>
                        <input type="text" asp-for="ProyectoInfo.Nombre" readonly class="form-control" id="nombre" placeholder="Nombre del Proyecto">
                        <span asp-validation-for="ProyectoInfo.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputPassword4" class="text-dark"><strong> Creador del Proyecto</strong></label>
                        <input type="text" asp-for="ProyectoInfo.Creador" readonly class="form-control" id="apellido" placeholder="Creador del Proyecto">
                        <span asp-validation-for="ProyectoInfo.Creador" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="inputEmail4" class="text-dark"><strong> Cliente</strong></label>

                        <input asp-for="ProyectoInfo.Cliente.Nombre" readonly class="form-control" />


                    </div>


                </div>

                <div class="form-row">


                    <div class="form-group col-md-4">
                        <label for="inputPassword4" class="text-dark"><strong> Costo del Proyecto</strong></label>
                        <input type="number" asp-for="ProyectoInfo.Costo" readonly class="form-control" placeholder="0.00">
                        <span asp-validation-for="ProyectoInfo.Costo"  class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="inputEmail4" class="text-dark"> <strong> Categoria del Proyecto</strong></label>

                        <input asp-for="ProyectoInfo.Categoria.Nombre" readonly class="form-control" />


                    </div>

                    <div class="form-group col-md-4">
                        <label for="inputPassword4" class="text-dark"> <strong> UpLoader</strong></label>
                        <input type="text" asp-for="ProyectoInfo.UpLoader" readonly class="form-control" readonly value="@LoadDataUser.UserAccount">
                        <span asp-validation-for="ProyectoInfo.UpLoader" class="text-danger"></span>
                    </div>

                </div>



                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputEmail4" class="text-dark"> <strong> Tiempo de Duración</strong></label>
                        <input type="text" asp-for="ProyectoInfo.Duracion" readonly class="form-control">
                        <span asp-validation-for="ProyectoInfo.Duracion"  class="text-danger"></span>
                    </div>



                    <div class="form-group col-md-4">
                        <label for="inputEmail4" class="text-dark"> <strong> Identificación del Proyecto</strong></label>
                        <input asp-for="ProyectoInfo.Identificacion" readonly class="form-control" maxlength="10" min="10" placeholder="Identifiación" />
                        <span asp-validation-for="ProyectoInfo.Identificacion" class="text-danger"></span>


                    </div>

                </div>

                <div class="form-row">


                    <div class="form-group col-md-4">


                    </div>




                </div>



                <br />
            </div>
            <hr />
            <br />





        </div>

        <br />
        
        <div class="col-sm-10 espaciotitulo divproyectodetalles" id="divfotos">

            <div>
                <br />
                <h3 class="text-info"><i class="fa fa-picture-o"></i> Imagenes del Proyecto</h3>
                <h6>Imagenes previas del proyecto</h6>
                <br />
                <div class="form-row">


                    <div id="slaider" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner slaider">
                            <div class="carousel-item active">
                                <img src="~/FotosProyectos/@Model.ProyectoImg.Screen1" style="width:100%; border-radius: 5px;" class="card-img" alt="First slide" />

                            </div>
                            <div class="carousel-item">
                                <img src="~/FotosProyectos/@Model.ProyectoImg.Screen2" style="width:100%; border-radius: 5px;" class="card-img" alt="Second slide" />

                            </div>
                            <div class="carousel-item">
                                <img src="~/FotosProyectos/@Model.ProyectoImg.Screen3" style="width:100%; border-radius: 5px;" class="card-img" alt="Third slide" />

                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only ">Next</span>
                        </a>
                    </div>


                   




                </div>



                <br />


            </div>
            <hr />
            <br />



        </div>
        
        <br />
        <div class="col-sm-10 espaciotitulo divproyectodetalles" id="divarchivos">

            <div>
                <br />
                <h3 class="text-info"><i class="fa fa-file-zip-o"></i> Archivos del Proyecto</h3>
                <h6>Contrato y .Rar del Proyecto</h6>
                <br />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <a class="btn btn-lg btn-dark" style="color:white;" asp-action="DescargarProyecto" asp-controller="Proyectos" asp-route-archivo="@Model.ProyectoFile.ArchivoRar"> <i class="fa fa-download"></i> Descargar archivo .rar del proyecto</a>

                    </div>
                    <div class="form-group col-md-6">
                        <a class="btn btn-lg btn-success" style="color:white;" asp-action="VerContrato" asp-controller="Proyectos" asp-route-archivo="@Model.ProyectoFile.Contrato"> <i class="fa fa-file-pdf-o"></i> Descargar contrato del proyecto</a>

                    </div>


                </div>

            </div>

            <br />

            

            <br />
            <br />
        </div>

        <br />

        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-check-square"></i> Confirmación de Envio</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">


                        <h5 class="text-success text-center">Seguro que desea enviar el formulario del proyecto?</h5>
                        <br />
                        <div class="alert alert-info">
                            <strong>Nota:</strong> Si el formualrio contiene datos no validos tendra que retrodeceder a dicha parte del formulario.
                            Revise correctamente el formulario antes de enviar.
                        </div>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"> <i class="fa fa-close"></i> Cancelar</button>
                            <button type="submit" class="btn btn-primary"> <i class="fa fa-check-circle-o"></i> Enviar</button>
                        </div>


                    </div>

                </div>
            </div>
        </div>


    </form>

</center>

@Html.Partial("_Footer")


