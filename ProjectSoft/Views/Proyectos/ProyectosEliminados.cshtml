@model IEnumerable<ProjectSoft.Models.ProyectosModel.ProyectoInfo>
@{
    ViewData["Title"] = "Proyectos Eliminados";
}

<div class=" col-sm-12 portada portadacontainer ">
    <br />
    <h2 class="text-center"><i class="fa fa-trash-o"></i> Proyectos Eliminados</h2>
    <p class="text-center text-info">Observa y recupera los proyectos eliminados.</p>

</div>

<br />


<div class="col-sm-12">


    <div class="col-sm-12 ">

        @Html.Partial("_AlertPartial")
        <table class=" table table-hover tablacliente table-responsive-lg">

            <thead class="table-dark">
                <tr>



                    <th>
                        Id
                    </th>

                    <th>
                        Nombre
                    </th>

                    <th>
                        Creador
                    </th>

                    <th>
                        Uploader
                    </th>


                    <th class="text-center">
                        Acciones
                    </th>

                </tr>
            </thead>
            

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(m => item.Id)
                    </td>

                    <td>
                        @Html.DisplayFor(m => item.Nombre)
                    </td>

                    <td>
                        @Html.DisplayFor(m => item.Creador)
                    </td>

                    <td>
                        @Html.DisplayFor(m => item.UpLoader)
                    </td>



                    <td>
                        <form>
                            <center>


                                <a class="btn btn-sm btn-primary" asp-controller="Proyectos" asp-action="Restaurar" asp-route-Id="@item.Id">
                                    <i class="fa fa-recycle" style="color:white"></i> Restaurar Proyecto
                                </a>


                            </center>
                        </form>

                    </td>

                </tr>

            }





        </table>



    </div>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-info">
            No hay proyectos eliminados.
        </div>
    }
</div>



@Html.Partial("_Footer");

