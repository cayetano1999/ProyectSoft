@model ProjectSoft.Models.LoginCredentials
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-controller="Usuarios" method="post">

    @Html.Partial("_AlertPartial")

    <div class="col-sm-12" style="padding:0px; margin:0px; margin-top:30px;">

        
        <div class="col-sm-12">
            <center>
                <img src="~/images/LOGO.PNG" class="text-center" style="width:10%; border-radius:20px;" />
                <h1 class="text-center">Iniciar Sesión</h1>

               
                <div class="form-group col-sm-4 col-lg-offset-4">
                    <input asp-for="UserAccount"  type="text" class="form-control" placeholder="Usuario" />
                    

                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">

                    <input asp-for="Password"  type="password" class="form-control" placeholder="Contraseña" />
                    
                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">

                    <button type="submit" class="btn btn-primary form-control">Acceder</button>
                    @Html.Partial("_AlertPartial")

                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">

                    <a>No tienes cuenta? </a> <span> <strong> <a asp-action="Registrar" asp-controller="Usuarios">Registrate Aquí</a> </strong> </span>

                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">


                    <a asp-action="ForgotPassword">He olvidado mi contraseña</a>

                </div>




            </center>

        </div>

    </div>






</form>


<script src="~/js/Login.js"></script>
@Html.Partial("_Footer");

