@model ProjectSoft.ViewModels.UsuariosViewModel
@{
    ViewData["Title"] = "Administrar Usuarios";
}
<div class=" col-sm-12 portada portadacontainer">
    <br />
    <h2 class="text-center"><i class="fa fa-users"></i> Usuarios del Sistema</h2>
    <p class="text-center text-info">Administra todo lo relacionado a los usuarios.</p>

</div>



<br />
<div class="col-sm-12">


    <form asp-action="Index" asp-controller="Clientes">
        <div class="form-row well">
            <div class="form-group col-md-4">

                <a asp-action="Registrar" asp-controller="Usuarios" class ="btn btn-md btn-secondary" >Agregar Usuario</a>

            </div>


            <div class="form-group col-md-3">

                <input type="text" class="form-control" name="busqueda" id="Nombre" placeholder="Id - Nombre">

            </div>
            <div class="form-group col-md-3">

                <button class="btn btn-md btn-primary"> <i class="fa fa-search"></i> Buscar</button>

            </div>


        </div>
    </form>
</div>
<hr style="border: 1px solid #424242" />

<div class="col-sm-12">


    <div class="col-sm-12 ">


        <table class=" table table-hover tablacliente table-responsive-lg ">


            <tr>

                <th>
                    Foto
                </th>

                <th>
                    Nombre
                </th>

                <th>
                    Email
                </th>

                <th>
                    Dirección
                </th>

                <th>
                    User Account
                </th>

                <th>
                    Estado
                </th>



                <th class="text-center">
                    Acciones
                </th>

            </tr>

            @foreach (var item in Model.Usuarios)
            {
            <tr>



                <td>
                    <span> <img src="~/FotosPerfil/@item.Foto" style="width:40px; border-radius:100px;" /> </span>
                </td>

                <td>
                    @Html.DisplayFor(user => item.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(user => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(user => item.Direccion)
                </td>

                <td>
                    @Html.DisplayFor(user => item.UserAccount)
                </td>


                <td>
                    @if (item.Estado == "Activo")
                    {
                        <a class="text-success"> <i class="fa fa-check-circle"></i> @Html.DisplayFor(user => item.Estado) </a>
                    }

                    @if (item.Estado == "Desactivado")
                    {
                        <a class="text-danger"> <i class="fa fa-lock"></i> @Html.DisplayFor(user => item.Estado) </a>
                    }


                </td>


                <td>

                    <center>
                        <a class="btn btn-sm btn-success" asp-controller="Usuarios" asp-action="Detalles" asp-route-Id="@item.Id">
                            <i class="fa fa-info-circle" style="color:white"></i>
                        </a>


                        <a class="btn btn-sm btn-primary" asp-controller="Usuarios" asp-action="Editar"><i class="fa fa-pencil" style="color:white"></i></a>

                        <a class="btn btn-sm btn-danger" asp-controller="Usuarios" asp-action="Eliminar"><i class="fa fa-trash" style="color:white"></i></a>

                        <a class="btn btn-sm btn-secondary" asp-controller="Usuarios" asp-action="Eliminar"><i class="fa fa-lock" style="color:white"></i></a>
                    </center>

                </td>

            </tr>


            }



        </table>
    </div>
</div>



<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document"  style="width:1000px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"> <strong>REQUISITOS DE ADMISION</strong> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                

                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Nombre:</label>
                        <input type="text" asp-for="Usuario.Nombre" required class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Apellido:</label>
                        <input type="text" asp-for="Usuario.Apellido" required class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Dirección:</label>
                        <input type="text" asp-for="Usuario.Direccion" required class="form-control" id="recipient-name">
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Email:</label>
                        <input type="text" asp-for="Usuario.Email" required class="form-control" id="recipient-name">
                    </div>

                    
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Nombre de Usuario:</label>
                            <input type="text" asp-for="Usuario.UserAccount" required class="form-control" id="recipient-name">
                        </div>
                   

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Contraseña:</label>
                        <input type="text" asp-for="Usuario.Password" class="form-control" id="recipient-name">
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Rol de Usuario:</label>
                        <select name="rol" class="form-control">

                            <option>Usuario Común</option>
                            <option>Admin</option>
                        </select>
                    </div>



                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a class="btn btn-primary" asp-controller="Solicitud_Admisiones" asp-action="Index">Registrar Usuario</a>
            </div>
        </div>
    </div>
</div>



@Html.Partial("_Footer")