@model IEnumerable<ProjectSoft.Models.Clientes.Cliente>
@{
    ViewData["Title"] = "Clientes |";
}



<div class=" col-sm-12 portada portadacontainer">
    <br />
    <h2 class="text-center"><i class="fa fa-user"></i> Clientes</h2>
    <p class="text-center text-info">Administra todo lo relacionado a los clientes.</p>

</div>

<br />
<div class="col-sm-12">


    <form asp-action="Index" asp-controller="Clientes">
        <div class="form-row well">
            <div class="form-group col-md-4">
                <a class="btn btn-md btn-success opciones" style="color:white;" asp-action="RegistrarCliente" asp-controller="Clientes"> <i class="fa fa-plus"></i> Agregar Nuevo Cliente</a>

            </div>


            <div class="form-group col-md-3">

                <input type="text" class="form-control" name="busqueda" id="Nombre" placeholder="Nombre del Cliente o Email">

            </div>
            <div class="form-group col-md-3">

                <button class="btn btn-md btn-primary"> <i class="fa fa-search"></i> Buscar</button>

            </div>


        </div>
    </form>
    <hr style="border: 1px solid #424242" />

    <div class="col-sm-12">


        <div class="col-sm-12 ">


            <table class=" table table-hover tablacliente table-responsive-lg ">


                <tr>

                    <th>

                    </th>

                    <th>
                        Nombre
                    </th>

                    <th>
                        Email
                    </th>

                    <th>
                        Dirección
                    </th>

                    <th>
                        Tipo de Cliente
                    </th>


                    <th>
                        Naturaleza
                    </th>

                    <th>

                        Proyectos

                    </th>

                    <th class="text-center">
                        Acciones
                    </th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <a class="btn btn-sm btn-outline-primary">  <i class="fa fa-envelope"></i>  </a>
                        </td>

                        <td>
                            <span> <img src="~/FotosPerfilClientes/@item.Foto" style="width:40px; border-radius:100px;" /> </span> @Html.DisplayFor(c => item.Nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(c => item.Email)
                        </td>

                        <td>
                            @Html.DisplayFor(c => item.Direccion)
                        </td>

                        <td>
                            @Html.DisplayFor(c => item.TipoCliente)
                        </td>

                        <td>
                            @Html.DisplayFor(c => item.Naturaleza)
                        </td>

                        <td>
                            <a class="text-info"><i class=" fa fa-folder-open"></i> Ver Proyectos</a>
                        </td>
                        <td>

                            <center>
                                <a class="btn btn-sm btn-success" asp-controller="Clientes" asp-action="Detalles" asp-route-Id="@item.Id">
                                    <i class="fa fa-info-circle" style="color:white"></i>
                                </a>

                                <a class="btn btn-sm btn-primary" asp-controller="Clientes" asp-action="Editar" asp-route-Id="@item.Id"><i class="fa fa-pencil" style="color:white"></i></a>

                                <a class="btn btn-sm btn-danger" asp-controller="Clientes" asp-action="Eliminar" asp-route-Id="@item.Id"><i class="fa fa-trash" style="color:white"></i></a>
                            </center>

                        </td>

                    </tr>
                }





            </table>

            @if (Model.Count() == 0)
            {
                <div class="alert alert-info">

                    No hay clientes registrados actualmente.

                </div>
            }



        </div>

    </div>

</div>
@Html.Partial("_Footer")