@model ProjectSoft.Models.Clientes.Cliente
@{
    ViewData["Title"] = "Eliminar";
}

<div class=" col-sm-12 portada portadacontainer">
    <br />
    <h2 class="text-center"><i class="fa fa-trash"></i> Eliminar Cliente del Sistema</h2>
    <p class="text-center text-info">Al eliminar el cliente también se eliminan los proyectos referente al cliente</p>

</div>

<br />
<center>
    <form asp-action="Eliminar" asp-controller="Clientes" class="disabled" method="post" enctype="multipart/form-data">
        <br />

        <div class="col-sm-8 espaciotitulo disabled" style="background-color:white; border-radius:10px; box-shadow:initial; border-top: 2px solid #424242; border-bottom: 2px solid #424242;">

            @Html.Partial("_AlertPartial")

            <br />

            <img src="~/FotosPerfilClientes/@Model.Foto" style="width:10%; border-radius:100px;" class="embed-responsive" />

            <h3 class="text-danger text-center">¿Seguro que desea eliminar a <strong>@Model.Nombre</strong>?</h3>

            <br />
            <div class="form-row">
                <div class="form-group col-md-6">

                    <label for="inputEmail4" class="text-dark"> <strong> Naturaleza del Cliente</strong> </label>

                    <select asp-for="Naturaleza" disabled class="form-control border-info">

                        <option>
                            Seleccione...
                        </option>


                        <option>
                            Empresa
                        </option>



                        <option>
                            Usuario Común
                        </option>

                    </select>
                    <span asp-validation-for="Naturaleza" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4" class="text-dark"><strong> Nombre</strong></label>
                    <input asp-for="Nombre" disabled type="text" class="form-control border-info border-info" id="Nombre" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            


            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4" class="text-dark"><strong> Télefono</strong></label>
                    <input asp-for="Telefono" disabled type="tel" class="form-control border-info" maxlength="10" id="telefono" placeholder="8092456211">
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4" class="text-dark"><strong> Email</strong></label>
                    <input asp-for="Email" disabled type="email" class="form-control border-info" id="email" placeholder="nombre@dominio.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputPassword4" class="text-dark"><strong> Identificación</strong></label>
                    <input asp-for="Identificacion" disabled class="form-control border-info" placeholder="">
                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4" class="text-dark"><strong> Tipo de Cliente</strong></label>
                    <select asp-for="TipoCliente" disabled class="form-control border-info">

                        <option>Seleccione...</option>
                        <option>Constante</option>
                        <option>Temporal</option>


                    </select>
                    <span asp-validation-for="TipoCliente" class="text-danger"></span>





                </div>
            </div>

            <div class="form-row">
                
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-md btn-danger"> <i class="fa fa-trash"></i> Eliminar</button>
                    <a class="btn btn-md btn-success" asp-action="Index" asp-controller="Clientes"> <i class="fa fa-mail-reply"></i> Volver</a>

                </div>
            </div>



        </div>

    </form>
</center>
